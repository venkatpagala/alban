<?xml version="1.0" encoding="UTF-8"?>
<view_content> 
    <fieldline>
		<control id="bsXMLComment" maskId="MaskCustomizer" gType="textArea" rows="10" cols="50" />	
    </fieldline>		
	<fieldline/>
    <fieldline type="absolute">
		<control position="45,novalue" id="btXMLCommentOk" maskId="MaskCustomizer" >
			<img src="images/icones/confirm-normal.gif" forstate="normal"/>
			<img forstate="unavailable" src="images/icones/confirm-unavailable.gif"/>
			<navigation type="standard" name="closeWindow" params="windowId=xmlFileComment"/>
		</control>	
		<control position="135,novalue" id="btXMLCommentCancel" maskId="MaskCustomizer" >
			<img src="images/icones/delete-normal.gif" forstate="normal"/>
			<img forstate="unavailable" src="images/icones/delete-unavailable.gif"/>			
			<navigation type="standard" name="closeWindow" params="windowId=xmlFileComment"/>
		</control>	
    </fieldline>
</view_content>
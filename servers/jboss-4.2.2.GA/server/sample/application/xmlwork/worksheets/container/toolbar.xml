<?xml version="1.0" encoding="UTF-8"?>
<worksheet version="1.0" name="Toolbar" xmlns:container="http://www.rfs.com/fw30/container" xmlns:view="http://www.rfs.com/fw30/view" xmlns:layout="http://www.rfs.com/fw30/layout">
	
	<main_toolbar id="toolbar1">
		<control id="enable" maskId="ToolbarSample"/>		
		<toolbar_separator/>
		<control id="visible" maskId="ToolbarSample"/>	
		<toolbar_separator/>
		
			
			
		<control id="cmd1" maskId="ToolbarSample" img="insert"></control>
		<toolbar_separator/>
		
			
			
		<control id="cmd2" maskId="ToolbarSample" img="insert"></control>
		<toolbar_separator/>
		<group type="menuToolbarButton" label="More avec icone" id="more1" img="images/icones/insert-normal.gif">
			
				
				
			<control id="cmd3" maskId="ToolbarSample" gType="menuToolBarCommand" img="insert"></control>
			
				
				
			<control id="cmd4" maskId="ToolbarSample" gType="menuToolBarCommand" img="insert"></control>
			<submenu img="images/icones/insert-normal.gif" label="More" id="subbbbb">
				
					
					
				<control id="cmd5" maskId="ToolbarSample" gType="menuToolBarCommand" img="insert"></control>
				
					
					
				<control id="cmd6" maskId="ToolbarSample" gType="menuToolBarCommand" img="insert"></control>
			</submenu>					
		</group>		
	</main_toolbar>

	<layout:table>
		<layout:row>
			<layout:cell>
				
				<container:static id="staticWithToolbar" height="150" width="400">		
					<view:view>
						<view:title>Static with Toolbar</view:title>
						<view:body href="views/container/toolbar/toolbarStatic.xml"/>
					</view:view>
				</container:static>	
				
			</layout:cell>
			<layout:cell>
				
				<container:expandable id="expandableWithToolbar" height="150" width="400">		
					<view:view>
						<view:title>Expandable with Toolbar</view:title>
						<view:body href="views/container/toolbar/toolbarExpandable.xml"/>
					</view:view>
				</container:expandable>
				
			</layout:cell>
		</layout:row>
		<layout:row>
			<layout:cell>
				
				<container:transparent id="transparentWithToolbar" height="150" width="400">		
					<view:view>
						<view:body href="views/container/toolbar/toolbarTransparent.xml"/>
					</view:view>
				</container:transparent>	
										
			</layout:cell>
			<layout:cell>
				
				<container:tabs id="tabsWithToolbar" height="150" width="400" selected="tabsWithToolbar.tab">		
					<container:tab id="tabsWithToolbar.tab">
						<view:title>Tabs with Toolbar</view:title>
						<view:body href="views/container/toolbar/toolbarTabs.xml"/>
					</container:tab>		
				</container:tabs>	
					
			</layout:cell>
		</layout:row>
	</layout:table>
	
	<container:window id="windowWithToolbar" height="150" width="400" position="200,450" closed="false">	
		<view:view>
			<view:title>Window with Toolbar</view:title>
			<view:body href="views/container/toolbar/toolbarWindow.xml"/>
		</view:view>
	</container:window>	
	
</worksheet>
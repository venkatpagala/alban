<?xml version="1.0" encoding="UTF-8"?>
<!-- this persitence file is used by JPA in eclipse -->
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="timetracker-ejb3">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/timetracker-ejb3</jta-data-source>
		<class>org.andromda.timetracker.domain.User</class>
		<class>org.andromda.timetracker.domain.Timecard</class>
		<class>org.andromda.timetracker.domain.UserRole</class>
		<class>org.andromda.timetracker.domain.UserEmbeddable</class>
		<class>org.andromda.timetracker.domain.TimecardEmbeddable</class>
		<class>org.andromda.timetracker.domain.TimePeriod</class>
		<class>org.andromda.timetracker.domain.TimeAllocation</class>
		<class>org.andromda.timetracker.domain.Task</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
		</properties>
	</persistence-unit>
</persistence>

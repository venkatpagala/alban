			                			<java classname="org.andromda.schema2xmi.Schema2XMI" fork="true">
			                				<classpath>
			                					<path refid="schema2xmi.classpath" />
			                					<path refid="maven.compile.classpath" />
			                				</classpath>
			                				<!--

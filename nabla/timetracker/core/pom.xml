                  </component>
                  <component>
                    <name>hbm2cfgxml</name>
                    <outputDirectory>${target.dir}/site/hibernate3/generated-mappings</outputDirectory>
                    <!--<implementation>annotationconfiguration</implementation>-->
                    <implementation>configuration</implementation>

#
# Define watches
#
watch mgr
	service ping
		description Responses to ping
		interval 5m
		monitor fping.monitor
		period wd {Mon-Fri} hr {7am-10pm}
			alert mail.alert alban.andrieu@misys.com
			alertevery 1h
		period wd {Sat-Sun}
			alert mail.alert root@kgrdb01.misys.global.ad
        service http
                description HTTP service
                interval 10m
                monitor http.monitor -p 8080
                period
                        numalerts 10
        service smtp
                description SMTP service
                interval 10m
                monitor smtp.monitor -t 60
                period
                        numalerts 10
        service telnet
                description TELNET service
                interval 10m
                monitor telnet.monitor
                period wd {Mon-Fri} hr {7am-10pm}
                        alertevery 1h
                        alertafter 2 30m


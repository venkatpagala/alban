#; Shell servers - check if they're up.
watch shell
 service shellicmp
  description monitor shell servers with icmp
  interval 1m
  monitor fping.monitor
   period wd {Sun-Sat}
    alert mail.alert root@kgrdb01.misys.global.ad
     alertevery 30m
     alertafter 3 7m
    upalert mail.alert -S "shellmon/shell: ok" root@kgrdb01.misys.global.ad
     upalertafter 10m
   period LOGFILE: wd {Sun-Sat}
    alert file.alert -d /var/log/mon shellicmp.log
 service shellssh
  description check ssh on shell servers
  interval 8m
  monitor tcp.monitor -p 22
   period wd {Sun-Sat}
    alert mail.alert root@kgrdb01.misys.global.ad
     alertevery 90m
     alertafter 2 30m
    upalert mail.alert -S "shellssh/shell: ok" root@kgrdb01.misys.global.ad
     upalertafter 20m
   period LOGFILE: wd {Sun-Sat}
    
#; Watch local disk space on the file server.
watch fs
 service fsmon
  description file system storage monitoring
  interval 5m
  monitor freespace.monitor /:20% /jenkins:10% /var:15% /usr:20% /usr/local:20% /tmp:10%;;
   period wd {Sun-Sat}
    alert mail.alert root@kgrdb01.misys.global.ad
     alertevery 2h
    upalert mail.alert -S "fsmon/fs: ok" root@kgrdb01.misys.global.ad
     upalertafter 10m
   period LOGFILE: wd {Sun-Sat}
    alert file.alert -d /var/log/mon fsmon.log

#; DNS Servers.
watch dns
 service dnsicmp
  description ping the dns servers
  interval 4m
  monitor fping.monitor
   period wd {Sun-Sat}
    alert mail.alert root@kgrdb01.misys.global.ad
     alertevery 1h
     alertafter 3 16m
    upalert mail.alert -S "dnsicmp/dns: ok" root@kgrdb01.misys.global.ad
     upalertafter 10m
   period LOGFILE: wd {Sun-Sat}
    alert file.alert -d /var/log/mon dns.log

#; Network Time Servers
watch ntp
 service ntpicmp
  description icmp monitoring of ntp servers
  interval 5m
  monitor fping.monitor
   period wd {Sun-Sat}
    alert mail.alert root@kgrdb01.misys.global.ad
     alertevery 2h
     alertafter 3 20m
    upalert mail.alert -S "ntpicmp/ntp: ok" root@kgrdb01.misys.global.ad
     upalertafter 10m
   period LOGFILE: wd {Sun-Sat}
    alert file.alert -d /var/log/mon ntp.log
